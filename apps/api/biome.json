{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noStaticOnlyClass": "off"
      }
    },
    "ignore": [
      "./node_modules/",
      "./dist/",
      "./src/config/database/migrations/"
    ]
  }
}
